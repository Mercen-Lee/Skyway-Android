<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatementActivity">

    <TextView
        android:id="@+id/ing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="asdf"
        android:textSize="40dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/dark_skyway" />

    <Button
        android:id="@+id/ojt_state"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/statementbtn"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:text="OJT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/dark_skyway"/>

    <Button
        android:id="@+id/work_state"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/statementbtn"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="10dp"
        android:text="근무"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/dark_skyway"/>

    <Button
        android:id="@+id/wait_state"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/statementbtn"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="대기"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/dark_skyway"/>

    <Button
        android:id="@+id/vacation_state"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/statementbtn"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="휴가"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/dark_skyway"/>

</androidx.constraintlayout.widget.ConstraintLayout>